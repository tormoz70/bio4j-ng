			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>bio4j-public</id>
			<name>Public Maven Repo</name>
			<url>http://vps-nexus-bio4j.cloud.tilaa.com:8081/nexus/content/groups/public/</url>
