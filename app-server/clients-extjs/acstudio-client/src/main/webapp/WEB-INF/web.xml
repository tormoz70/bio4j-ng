<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">
    <display-name>Archetype Created Web Application</display-name>

    <!--Servlets-->
    <servlet>
        <servlet-name>biosrv</servlet-name>
        <servlet-class>ru.bio4j.ng.client.extjs.ServletApi</servlet-class>
        <init-param>
            <param-name>bioDebug</param-name>
            <param-value>${bioDebug}</param-value>
        </init-param>
        <init-param>
            <param-name>forwardURL</param-name>
            <param-value>http://localhost:9090/srvapi</param-value>
        </init-param>
    </servlet>
    <!--<servlet>-->
        <!--<servlet-name>login</servlet-name>-->
        <!--<servlet-class>ru.bio4j.ng.client.extjs.filter.LoginServlet</servlet-class>-->
        <!--<init-param>-->
            <!--<param-name>forwardURL</param-name>-->
            <!--<param-value>http://localhost:9090/biologin</param-value>-->
        <!--</init-param>-->
    <!--</servlet>-->

    <!--Filters-->
    <filter>
        <filter-name>security</filter-name>
        <filter-class>ru.bio4j.ng.client.extjs.filter.SecurityFilter</filter-class>
        <init-param>
            <param-name>bioDebug</param-name>
            <param-value>${bioDebug}</param-value>
        </init-param>
        <init-param>
            <param-name>staticSecurityManagerEnabled</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>error_page</param-name>
            <param-value>error.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>forwardURL</param-name>
            <param-value>http://localhost:9090/login</param-value>
        </init-param>
        <init-param>
            <param-name>publicAreas</param-name>
            <param-value>bio@users</param-value>
        </init-param>
    </filter>
    <!--Mapping-->
    <servlet-mapping>
        <servlet-name>biosrv</servlet-name>
        <url-pattern>/biosrv</url-pattern>
    </servlet-mapping>
    <!--<servlet-mapping>-->
        <!--<servlet-name>login</servlet-name>-->
        <!--<url-pattern>/login</url-pattern>-->
    <!--</servlet-mapping>-->

    <filter-mapping>
        <filter-name>security</filter-name>
        <url-pattern>/biosrv</url-pattern>
    </filter-mapping>

</web-app>
