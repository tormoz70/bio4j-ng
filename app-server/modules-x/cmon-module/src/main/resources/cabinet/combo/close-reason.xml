<?xml version="1.0" encoding="UTF-8"?>
<cursor xmlns="http://bio4j.ru/biodef-repo/store"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://bio4j.ru/biodef-repo/store http://bio4j.ru/biodef-repo/store/store-v10.xsd">
  <SQL action="select">
    <text>
      <![CDATA[
SELECT a.closereason_id as id, a.aname as caption
  FROM givc_org.closereason a
 WHERE (:query is null) or (upper(a.aname) like '%'||upper(:query)||'%')
 ORDER BY decode(a.closereason_id, 0, 0, 1), caption
      ]]>
    </text>
  </SQL>

  <fields>
    <field name="id" type="integer" header="Код" hidden="true" pk="true"/>
    <field name="caption" type="string" header="Значение" width="250"/>
  </fields>
</cursor>