<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">
    <display-name>Archetype Created Web Application</display-name>

    <!--Servlets-->
    <servlet>
        <servlet-name>rapi</servlet-name>
        <servlet-class>ru.bio4j.ng.remote.api.http.ServletApi</servlet-class>
        <init-param>
            <param-name>bioDebug</param-name>
            <param-value>${bioDebug}</param-value>
        </init-param>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>ru.bio4j.ng.remote.api.http.ServletLogin</servlet-class>
        <init-param>
            <param-name>bioDebug</param-name>
            <param-value>${bioDebug}</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>ru.bio4j.ng.remote.api.http.ServletTest</servlet-class>
    </servlet>

    <!--Filters-->
    <filter>
        <filter-name>cross-origin</filter-name>
        <filter-class>org.eclipse.jetty.servlets.CrossOriginFilter</filter-class>
        <!--<init-param>-->
            <!--<param-name>allowedOrigins</param-name>-->
            <!--<param-value>*</param-value>-->
        <!--</init-param>-->
        <!--<init-param>-->
            <!--<param-name>allowedMethods</param-name>-->
            <!--<param-value>GET,POST,DELETE,PUT,HEAD</param-value>-->
        <!--</init-param>-->
        <!--<init-param>-->
            <!--<param-name>allowedHeaders</param-name>-->
            <!--<param-value>origin,content-type,accept</param-value>-->
        <!--</init-param>-->
    </filter>
    <filter>
        <filter-name>proxy</filter-name>
        <filter-class>ru.bio4j.ng.remote.api.http.ProxyFilter</filter-class>
    </filter>

    <!--Mapping-->
    <servlet-mapping>
        <servlet-name>rapi</servlet-name>
        <url-pattern>/rapi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <filter-mapping>
        <filter-name>cross-origin</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>proxy</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>
